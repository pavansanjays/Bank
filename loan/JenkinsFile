pipeline {
    agent {
          docker {
                image 'maven:3.8.6-jdk-11' // <-- This environment is global
                args '-v /root/.m2:/root/.m2'
          }
    }
    environment{
         APP_JAR='target/*.jar'
    }

    stages {
        stage('build Stage') {
            steps {
                 echo "this is building stage"
                 dir(loan){  // we are saying check in loan folder i.e pom.xml
                 sh 'mvn clean install'
                 }
            }
        }

        stage('testing')
        {
            steps{
                echo "this is tesing stage"
            }
        }

        stage('Archeive jar file'){
           steps{
              echo "this is archiveing file"
              dir(loan){  // store in loan folder
              archiveArtifacts artifacts:APP_JAR
              }
           }
        }
    }
    post{
        always{
            echo"always in post"
        }
    }
}
