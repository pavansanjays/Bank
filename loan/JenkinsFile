pipeline {

    agent any   // use Jenkins container (root user)

    environment {
        APP_JAR = "loan/target/*.jar"   // adjust if your project path is different
    }

    stages {

        stage('Build') {
            steps {
                echo "Building the project"
                dir('loan') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                echo "Running tests"
                dir('loan') {
                    sh 'mvn test'
                }
            }
        }

        stage('Archive Artifact') {
            steps {
                echo "Archiving JAR file"
                archiveArtifacts artifacts: "${APP_JAR}"
            }
        }
    }

    post {
        always {
            echo "Pipeline completed"
        }
    }
}
