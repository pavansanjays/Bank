pipeline {
    agent any   // runs in your jenkins-root container as root

    environment {
        APP_JAR = 'loan/target/*.jar'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning repo from GitHub"
                git branch: 'dev-2',
                    url: 'https://github.com/pavansanjays/Bank.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building project with Maven"
                dir('loan') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                echo "Running tests"
                dir('loan') {
                    sh 'mvn test'
                }
            }
        }

        stage('Archive Artifact') {
            steps {
                echo "Archiving JAR"
                archiveArtifacts artifacts: APP_JAR
            }
        }
    }

    post {
        always {
            echo "Pipeline completed"
        }
    }
}
