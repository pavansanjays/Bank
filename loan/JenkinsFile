pipeline {

    agent none   // we use agent per stage

    environment {
        APP_JAR = 'target/*.jar'
    }

    stages {
        stage('Build Stage') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-21'
                    args '-v /var/jenkins_home/.m2:/m2_repo'
                }
            }
            steps {
                echo "This is the building stage"
                dir('loan') {
                    sh 'mvn -Dmaven.repo.local=/m2_repo clean install'
                }
            }
        }

        stage('Testing') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-21'
                    args '-v /var/jenkins_home/.m2:/m2_repo'
                }
            }
            steps {
                echo "Running unit tests"
                dir('loan') {
                    sh 'mvn -Dmaven.repo.local=/m2_repo test'
                }
            }
        }

        stage('Archive jar file') {
            steps {
                echo "This is the archiving file stage"
                dir('loan') {
                    archiveArtifacts artifacts: APP_JAR
                }
            }
        }
    }

    post {
        always {
            echo "always in post"
        }
    }
}
