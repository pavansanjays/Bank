pipeline {
    agent any   // Jenkins runs in jenkins-root container

    stages {
        stage('Build & Archive (Maven in Docker)') {
            agent {
                docker {
                    // Maven + JDK 21 image
                    image 'maven:3.9.6-eclipse-temurin-21'
                    // Optional: cache dependencies
                    // args '-v /var/jenkins_home/.m2:/root/.m2'
                }
            }
            steps {
                echo "Building & archiving with Maven (JDK 21) inside Docker"

                dir('loan') {
                    // Force Java 21 instead of 24
                    sh 'mvn -B -Dmaven.compiler.release=21 clean install'

                    // DEBUG (optional, just to see what is there)
                    sh 'ls -R'

                    // Archive jar while target/ definitely exists in this workspace
                    archiveArtifacts artifacts: 'target/*.jar'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed"
        }
    }
}
