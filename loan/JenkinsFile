pipeline {
    // Jenkins itself (jenkins-root) is the main agent
    agent any

    environment {
        APP_JAR = 'loan/target/*.jar'
    }

    stages {

        // Jenkins will already do "Declarative: Checkout SCM" for you automatically
        // so we don't need our own Checkout stage.

        stage('Build & Test (Maven in Docker)') {
            agent {
                docker {
                    // Maven + JDK image
                    image 'maven:3.9.6-eclipse-temurin-21'
                    // optional: cache dependencies between builds
                    // args '-v /var/jenkins_home/.m2:/root/.m2'
                }
            }
            steps {
                echo "Building & testing with Maven Docker image"
                dir('loan') {
                    // clean + compile + tests
                    sh 'mvn -B clean install'
                    // or separate:
                    // sh 'mvn -B clean test'
                }
            }
        }

        stage('Archive Artifact') {
            steps {
                echo "Archiving JAR"
                archiveArtifacts artifacts: APP_JAR
            }
        }
    }

    post {
        always {
            echo "Pipeline completed"
        }
    }
}
